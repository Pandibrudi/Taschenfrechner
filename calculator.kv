#:kivy 2.1.0
<CalculatorGridLayout>:
    cols: 1

    GridLayout:
        rows: 2
        cols: 1
        size_hint: (1, .05)
        Label:
            text: "Der Taschenfrechner"
            font_name: 'comic.otf'
            size_hint: (1.0, 1.0)
            font_size: 30
            size_hint_x: 3
            halign: "left" 
            valign: "middle"
            color: 0.96, 0.98, 0.44, 1  # RGB(246, 250, 112)
        Label:
            text: "plaintxt.lol - Fabian Navarro, Elias Hirschl"
            font_name: 'comic.otf'
            size_hint: (1.0, 1.0)
            font_size: 15
            halign: "left" 
            valign: "middle"
            color: 1, 1, 1, 1

    GridLayout:
        cols: 3
        size_hint: (1, .1)
